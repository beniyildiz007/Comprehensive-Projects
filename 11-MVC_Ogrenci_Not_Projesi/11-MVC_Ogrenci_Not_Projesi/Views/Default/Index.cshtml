@using _11_MVC_Ogrenci_Not_Projesi.Models.EntityFramework
@model List<TBLDERSLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>DERS ID</th>
            <th>DERS ADI</th>
            <th>İŞLEMLER</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
        <tr>
            <td><b>@i.DERSID</b></td>
            <td>@i.DERSAD</td>
            <td>
                <a href="/Default/Sil/@i.DERSID" class="btn btn-danger">SİL</a>&nbsp;
                <a href="/Default/Getir/@i.DERSID" class="btn btn-success">GÜNCELLE</a>
            </td>

        </tr>
        }
    </tbody>
</table>
<a href="/Default/YeniDers" class="btn btn-primary">Yeni Ders Kaydı</a>
