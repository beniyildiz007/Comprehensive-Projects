@using _11_MVC_Ogrenci_Not_Projesi.Models.EntityFramework
@model List<TBLOGRENCILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>ÖĞRENCİ ID</th>
        <th>ADI</th>
        <th>SOYADI</th>
        <th>CİNSİYET</th>
        <th>KULÜP</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @foreach (var i in Model)
        {
        <tr>
            <td><b>@i.OGRENCIID</b></td>
            <td>@i.OGRAD</td>
            <td>@i.OGRSOYAD</td>
            <td>@i.OGRCINSIYET</td>
            <td>@i.TBLKULUPLER.KULUPAD</td>
            <td>
                <a href="/Ogrenci/Sil/@i.OGRENCIID" class="btn btn-danger">SİL</a>&nbsp;
                <a href="/Ogrenci/Getir/@i.OGRENCIID" class="btn btn-success">GÜNCELLE</a>
            </td>

        </tr>
        }
    </tbody>
</table>
<a href="/Ogrenci/YeniOgrenci" class="btn btn-primary">Yeni Öğrenci Kaydı</a>


